/* SConsoleUIController Specific Styles */

/* Root console container - responsive overlay with proper game screen sizing */
#console-root {
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    display: flex;
}


/* Root UI Document element styling */
.console-ui-root {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
}